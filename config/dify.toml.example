# Dify 工作流 API 配置

[dify]
# API 端点（请替换为实际的 Dify 实例地址）
api_endpoint = "https://your-dify-instance.com/v1/workflows/run"

# API Key（请妥善保管，建议使用环境变量 MCP_DIFY_API_KEY）
api_key = "your-api-key-here"

# 请求超时时间（秒）
timeout = 300

# 最大上下文 tokens（Dify 限制为 20k）
max_context_tokens = 20000

# 重试配置
[dify.retry]
enabled = true
max_attempts = 3
backoff_factor = 2
