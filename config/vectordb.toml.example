# 向量数据库配置

[vectordb]
# 数据库后端：chromadb / faiss
backend = "chromadb"

# 嵌入模型
embedding_model = "sentence-transformers/all-MiniLM-L6-v2"

# 集合名称
collection_name = "mcp_api_test_knowledge"

# 持久化目录
persist_directory = "./storage/vectordb"

# 检索配置
[vectordb.retrieval]
# Top-K 相关片段数量
top_k = 10
# 相似度阈值（0-1）
similarity_threshold = 0.7
# Token 预算（为检索片段预留的空间）
token_budget = 5000

# 更新配置
[vectordb.update]
# 批量更新大小
batch_size = 50
# 异步更新（避免阻塞任务执行）
async_update = true
